[core]
    excludesfile = ~/.gitignore_global
[web]
    browser = open
[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix

[alias]
    s    = status
    cm   = commit
    c    = !git add . && git commit -a && git push
    fuck = !git commit --amend && git push --force
    br   = branch
    co   = checkout
    d    = diff
    l    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    who  = shortlog -s -n --
    go   = checkout -B
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold
[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
[merge]
    log = true

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
remote = origin
merge = refs/heads/master

# URL shorthands
[url "git@github.com:"]
insteadOf = "gh:"
pushInsteadOf = "github:"
pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
insteadOf = "github:"
[url "git@gist.github.com:"]
insteadOf = "gst:"
pushInsteadOf = "gist:"
pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
insteadOf = "gist:"

[push]
default = tracking

[user]
    email = contact@gaurishsharma.com
    name = Gaurish Sharma
